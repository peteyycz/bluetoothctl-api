[Unit]
Description=Bluetoothctl API Service
After=network.target bluetooth.target

[Service]
Type=simple
User=peteyycz
WorkingDirectory=/home/peteyycz/bluetoothctl-api
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 /home/peteyycz/bluetoothctl-api/app.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=bluetoothctl-api

[Install]
WantedBy=multi-user.target
